<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutLoginLogo"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="143dp"
            android:layout_height="135.2dp"
            android:src="@drawable/img_login_logo"
            android:id="@+id/ivLoginlogo"/>

        <ImageView
            android:layout_width="313.33dp"
            android:layout_height="47dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/img_kakao_login"
            android:id="@+id/ivKakaoLogin"/>

        <ImageView
            android:layout_width="313.33dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_naver_login"
            android:id="@+id/ivNaverLogin"/>

        <ImageView
            android:layout_width="313.33dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_google_login"
            android:id="@+id/ivGoogleLogin"/>

        <ImageView
            android:layout_width="313.33dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_apple_login"
            android:id="@+id/ivAppleLogin"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>